<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="全局设置">

        <SwitchPreference
            android:title = "显示日志"
            android:key = "setting_log"
            android:summary = "没啥卵用，但是看着很nb qwp"
            android:icon = "@drawable/ic_action_log"
            />

        <SwitchPreference
            android:title = "使用代理"
            android:key = "setting_proxy"
            android:summary = "拖慢速度，但是对ip封禁机制的服务器有效"
            android:icon = "@drawable/ic_action_proxy"
            />

        <SwitchPreference
            android:title = "base64加密"
            android:key = "setting_base64"
            android:summary="对于使用base64加密传输数据的服务器有效"
            android:icon = "@drawable/ic_action_base64"
            />

        <SwitchPreference
            android:title = "使用GET方法"
            android:key = "setting_get"
            android:summary="对于使用GET方法和网址后缀传输数据的服务器有效"
            android:icon = "@drawable/ic_action_get"
            />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
